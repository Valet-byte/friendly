<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="3-15-2023--social-networks--001" author="Valet-Byte">

        <createTable tableName="social-networks">
            <column name="username" type="varchar(100)">
                <constraints primaryKey="true" nullable="false" references="user(username)" foreignKeyName="user_username"/>
            </column>

            <column name="is-close-profile" type="bool" defaultValue="false">
                <constraints nullable="false"/>
            </column>

            <column name="message-from-strangers" type="bool" defaultValue="true">
                <constraints nullable="false"/>
            </column>

            <column name="is-hide-mode" type="bool" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>